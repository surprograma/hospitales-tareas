{
  "name": "nodejs-api-seed",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/bin/www.js",
  "scripts": {
    "start": "nodemon",
    "build": "run-s clean transpile",
    "server": "node ./dist/bin/www",
    "dev": "cross-env NODE_ENV=development run-s build server",
    "prod": "cross-env NODE_ENV=production run-s build server",
    "clean": "rimraf dist",
    "db:init": "run-s transpile db:migrate",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "transpile": "run-p transpile:*",
    "transpile:lib": "babel ./lib --out-dir dist/lib --copy-files --source-maps",
    "transpile:bin": "babel ./bin --out-dir dist/bin --copy-files --source-maps",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --fix ./lib",
    "lint:prettier": "prettier --write ./lib",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "heroku-postbuild": "run-s build db:migrate"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "lib/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "morgan": "^1.9.1",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.9.0",
    "@types/jest": "^26.0.19",
    "babel-plugin-inline-dotenv": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.9.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.5",
    "jest": "^26.6.0",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "supertest": "^5.0.0"
  },
  "optionalDependencies": {
    "pg-native": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "engines": {
    "node": "14.15.x"
  }
}
